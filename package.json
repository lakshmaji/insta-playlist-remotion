{
	"name": "bookmark-manager-monorepo",
	"private": true,
	"version": "0.0.1",
	"packageManager": "npm@10.8.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"preview": "turbo run preview",
